@model IEnumerable<Projekt_Teknologji_dotNet.Models.Tipi>
@{
    ViewBag.Title = "AlbaRent- Cilesi dhe siguri!";
}

<div class="Header-content">
    <div class="content">
        <div class="container">
            <p>Na vizitoni per sherbimet tona</p>
            <a class="highlight" href="#">Caktoni nje takim!</a>
        </div>
    </div>
</div>
<div class="main-content">
    <div class="max-width-c">
        <h2>Katalogu i makinave</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Emri)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ikona)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emri)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ikona)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit",  new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>